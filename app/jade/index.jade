				.category.category_big.categore_even-column
						.category__header.clearfix
							.category__full-content
								i.pe-7s-more.pe-5x.pe-va
							h3.category__title Управление проектами на промышленных предприятиях
						.content
							.content__wrap
								.content__image-wrap
									img.content__image(src='images/content/amm1.jpg', alt='amm1')
